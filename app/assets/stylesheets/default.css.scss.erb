/* Reset + Common --------------------- */

*, html, body, p, ul, ol, li { margin: 0;padding: 0; }
a { text-decoration: none; }
a, a:visited {
    img{ border: 0; }
}
h1, h2, h3, h4, h5, h6 { font-weight: normal; }
ul { list-style: none; }

body { background: url('<%= asset_path "bg.png" %>') repeat-x;color: #286092;font: 12px/16px 'Ubuntu',Helvetica,sans-serif; }
#container { position: relative;margin: 0 auto;width: 1020px; }
.wrap { width: 1020px;margin: 0 auto;overflow: hidden;position: relative; }
a, #sidebar a, .article a { color: rgba(40,96,146,1); }
a:hover, #sidebar a:hover, .article a:hover { 
    color: rgba(53,128,195,1); 
}

.article a:hover {
    text-decoration: underline;
}

.article {
    border-bottom: 1px solid rgb(232, 232, 232);
    background-color: #fff;
}

.article:hover {
	background-color: #fff;
	background-image: none;
	box-shadow: 0 0 5px rgba(0,0,0,.1);
	position: relative;
	cursor: pointer;
}

.bigtext {
    font-size: 19px;
    font-weight: bold;
}

/* Header --------------------- */

header {
	display: block;
	padding: 10px 0;
	text-shadow: 0 1px 0 #e2f4ff;
}

header a { color: #286092; }

#header-left { float: left;overflow: hidden;width: 650px; }
#header-right { float: right;width: 257px;padding-top: 5px; margin-right: 15px; }

#logo { float: left; margin-left: 20px; }

nav { float: left;overflow: hidden;padding: 9px 0 0 20px;width: 380px; }
nav a, .heading a { float: left;padding: 5px 10px; }
.active { background: #286092;color: #fff;text-shadow: none;border-radius: 5px; }

#header-right .app {
	float: right;
	background: url('<%= asset_path "app.png" %>') no-repeat right top;
	padding: 3px 30px 5px 0;
	display: none;
	margin-top: 5px;
}

#profile { float: right;margin-left: 20px;overflow: hidden; }

#profile a {
	float: right;
	margin-left: 10px;
	padding-top: 9px;
}
#person-name{
	background: url('<%= asset_path "arrow-profile.png" %>') no-repeat right 13px;
	padding: 9px 15px 0 0;
}

#profile-menu-wrapper {
	background: rgba(211,229,239,1);
	position: absolute;
	z-index: 10;
	left: 879px;
	width: 140px;	
	top: 48px;
	border-radius: 0 0 3px 3px;
	box-shadow: 0 1px 5px rgba(0,0,0,.3);
	display: none;
}

#profile-menu-wrapper a {
	color: rgba(40,96,146,1);
	text-transform: uppercase;
	font-size: 10px;
	padding: 5px 15px 5px 30px;
}
#profile-menu-wrapper li:hover { background: url('<%= asset_path "profile-menu-hover.png" %>') repeat-x; } 

.settings {
	background: url('<%= asset_path "profile-menu-icons.png" %>') no-repeat 10px 7px;
	display: block;
}

.out {
	background: url('<%= asset_path "profile-menu-icons.png" %>') no-repeat 10px -21px;
	display: block;
	padding-top: 6px;
}

/* Notifications ------------ */
#notifications {
    position: absolute;
    top: 15px;
    right: 10px;
    z-index: 999;

    a, a:visited{
        color: #fff;
        font-weigth: bold;
    }

    li{
        background: rgba(31, 74, 112, 0.9);
        width: 300px;
        height: 60px;
        border-radius: 5px;
        color: white;
        text-shadow: 0px 0px 1px white;
        line-height: 60px;
        text-align: center;
        overflow: hidden;
        margin-bottom: 15px;
        box-shadow: 0 0 10px rgba(0,0,0,0.6);
    }
}

/* Main --------------------- */
#main { box-shadow: 0 0 10px rgba(40,96,146,.1); }
#nosto {
	background: #d6f0ff;
	background-image: -webkit-gradient(
    	linear,
    	left bottom,
    	left top,
    	color-stop(0.12, rgb(214,240,255)),
    	color-stop(0.56, rgb(222,243,255))
	);
	padding: 20px;
	overflow: hidden;
	text-shadow: 0 1px 0 rgba(226,244,255,1);
	border: 1px solid rgba(193,205,215,.6);
	color: rgba(90,90,90,1);
    box-shadow: 0 0 8px rgba(0, 0, 0, 0.1);
    z-index: 2;
    position: relative;
}
.score, .article-pic, .article-content { float: left; }

#nosto h2 { margin-bottom: 13px;font-size: 12px;text-transform: uppercase; }

.article-pic {
	border: 1px solid rgba(188,211,232,1);
	margin-right: 20px;
	border-radius: 3px;
	box-shadow: inset 0 0 10px rgba(0,0,0,.5);
}

.score { margin-right: 20px; margin-top: 10px}

.interest {
    background: rgba(255,126,0,1);
    color: rgba(255,255,255,1);
	text-align: center;
	padding: 7px 0;
	text-shadow: none;
	border-radius: 15px;
	margin-bottom: 5px;
	height: 16px;
	width: 31px;
	line-height: 16px;
	font-weight: bold;
}

.visited .interest { 	background: rgba(238,238,238,1); color: rgba(144,144,144,1); }

.article-content { padding-top: 2px; width: 85%; }
.article-content h1 { margin-bottom: 15px; }
.article-content > p { font-style: italic; }

.meta { padding-top: 10px;color: rgba(99,99,99,1); }
.meta p { float: left; }

.comments { margin-left: 10px;background: url('<%= asset_path "comments.png" %>') no-repeat;padding-left: 15px; background-position: 0px 3px; }



/* Questions and Answers --------------------- */
#qa { padding: 20px;background: #fff;border-color: rgba(193, 205, 215, .6);border-width: 0 1px 1px 1px;border-style: solid; }
#qa p { margin-bottom: .7em; }
#qa li { margin-bottom: 20px; }
.question { font-weight: bold;font-size: 15px;margin-bottom: 10px; }

/* Feedback --------------------- */
#feedback {
	padding: 20px;
	background: #fff;
	border-color: rgba(193, 205, 215, .6);
	border-width: 0 1px 1px 1px;
	border-style: solid;
	overflow: hidden;
}
#feedback .intro { margin-bottom: 20px; }
#feedback textarea { padding: 20px;border: 1px solid #dedede;width: 400px;height: 200px;margin-bottom: 20px; }
#feedback #more { border: none;cursor: pointer; }

/* Whitelist --------------------- */
.whitelist {
	padding: 20px;
	background: #fff;
	border-color: rgba(193, 205, 215, .6);
	border-width: 0 1px 1px 1px;
	border-style: solid;
	overflow: hidden;
	width: 588px;
}

.letter { font-weight: bold;margin-top: 15px; }
.letter:first-child { margin-top: 0; }

.whitelist-wrapper #sidebar { width: 348px; }
.whitelist-wrapper #sidebar h2 { margin-bottom: 20px; }

/* Terms and conditions --------------------- */
#terms, .fullwidth {
	padding: 20px;
	background: #fff;
	border-color: rgba(193, 205, 215, .6);
	border-width: 0 1px 1px 1px;
	border-style: solid;
	overflow: hidden;
}

#terms p { margin-bottom: 10px; }
#terms .terms-title { font-weight: bold;margin-bottom: 10px; }
#terms li { margin-bottom: 20px; }
#terms .sub-list li { margin-bottom: 0; }
#terms .sub-list li:first-child { margin-bottom: 10px; }

/* News --------------------- */
#news {
	background: rgba(196,220,234,1);
	border-width: 0 1px 1px 1px;
	border-style: solid;
	border-color: rgba(193,205,215,.6);
	overflow: hidden;
	border-radius: 0 0 3px 3px;
}
#list { 
    float: left;
    box-shadow: 0 0 10px rgba(0, 0, 0, .2);
    text-shadow: 0 1px 0 rgba(255,255,255,1);
    background: white;
    min-height: 600px;
    position: relative;
    z-index: 10;
}
.article {
    background-image: -webkit-gradient(
	    linear,
	    left bottom,
	    left top,
	    color-stop(0.12, rgb(242,242,242)),
	    color-stop(0.56, rgb(255,255,255))
	);
    background-image:  -moz-linear-gradient(
        rgb(242,242,242) 12%,
        rgb(255,255,255) 56%
    );
	color: rgba(90,90,90,1);
	display: block;
	overflow: hidden;
	padding: 15px 20px;
	/* width: 588px; */
    width: 980px;
}

.visited {
    color: #8A8A8A;
    background-color: #fff;
	background-image: -webkit-gradient(
	    linear,
	    left bottom,
	    left top,
	    color-stop(0.12, rgb(242,242,242)),
	    color-stop(0.56, rgb(255,255,255))
	);
    background-image:  -moz-linear-gradient(
        rgb(242,242,242) 12%,
        rgb(255,255,255) 56%
    );
}

#list .article-content { padding: 5px 0; }
#list .article-content a.headline { font-size: 15px; color: rgba(40,96,146,1); }
#list .visited .article-content h2 a { color: rgba(138,138,138,1); }

.article, .visit {
	position: relative;
	z-index: 9;
}

.actions {
	background: url('<%= asset_path "actions.png" %>') no-repeat right top;
	display: block;
	float: right;
	height: 16px;
	width: 16px;
	text-indent: -999em;
	cursor: pointer;
	position: relative;
	z-index: 100;
	margin: 5px;
}

.actions-nav {
	display: none;
	background: rgba(255,255,255,1);
	border: 1px solid #bebebe;
	box-shadow: 0 0 5px rgba(0,0,0,.2);
	width: 120px;
	position: absolute;
	right: 0px;
	top: 0px;
}

.actions-nav a { color: #636363;padding: 3px 5px;display: block;cursor: pointer; }
.actions-nav a:hover { background: #e7e7e7;color: #232323; }

/* List-item when article is viewed on sidebar --------------------- */
#list .view {
	background: url('<%= asset_path "view-bg.png" %>') repeat-x rgba(214,240,255,1);
	border-width: 1px 0;
	border-style: solid;
	border-color: rgba(201,216,230,1);
	text-shadow: 0 1px 0 rgba(226,244,255,1);
}
#list .view .article-content h2 a { color: rgba(40,96,146,1); }

.view .points { color: rgba(40, 96, 146, 1); }

/* Sidebar --------------------- */
#sidebar {
	float: right;
	padding: 20px;
	width: 350px;
	text-shadow: 1px 0 0 rgba(226,244,255,1);
}

#sidebar h2 { line-height: 120%; }

#sidebar .meta { color: rgba(90,90,90,1); }

#scroller{
    width: 350px;
    overflow: auto;
    padding-right: 15px;
}

#scroller.fixed {
  position: fixed;
  top: 0;
  margin-top: 20px;
  height: 90%;
}

h3.please {
    text-align: center;
}

.news-viewed { overflow: hidden;border-bottom: 1px solid rgba(184,198,211,1);padding-bottom: 10px; }
.news-viewed > p { display: block;clear: both;margin-top: 15px;float: left;color: rgba(74,74,74,1); }
.readfull, .statistics, #nosto .comments {
	float: left;
	display: block;
	margin-top: 15px;
	padding-left: 20px;
}
.readfull { background: url('<%= asset_path "arrow-readfull.png" %>') no-repeat; }
.statistics { margin-left: 15px;background: url('<%= asset_path "statics.png" %>') no-repeat; }

.talk {
	padding: 15px 0;
	border-top: 1px solid rgba(202,227,241,1);
	border-bottom: 1px solid rgba(184,198,211,1);
	overflow: hidden;
}

.talk .person-comment a { text-decoration: underline; }

.talk img {
	float: left;
	margin-right: 15px;
}

.talk .commenter .timeago {
    color: gray;
    margin-left: 3px;
}

img.profile {
	width: 48px;
	height: 48px;
	border: 1px solid rgba(165,192,216,1);
	border-radius: 3px;
}
.talk .talk-meta { float: left; width: 100%; }
.person-name { font-weight: bold;margin-bottom: 3px;cursor: pointer; }

/* Footer --------------------- */
footer { padding: 20px 0 40px; }

#more {
	background-image: -webkit-gradient(
	    linear,
	    left bottom,
	    left top,
	    color-stop(0.12, rgb(40,97,146)),
	    color-stop(0.71, rgb(67,143,209))
	);
	display: block;
	float: left;
	padding: 10px 7px;
	width: 70px;
	color: rgba(255,255,255,1);
	text-align: center;
	border-radius: 3px;
	text-shadow: 0 -1px 0 rgba(40,97,146,1);
}

#foo-nav { float: right;overflow: hidden; }
#foo-nav li { float: left; }
#foo-nav a { padding: 0 10px;color: rgba(40,96,146,1); }



img.loading {
    visibility: hidden;
    margin-left: 8px;
    margin-top: 8px;
}

html.pages {
    ol {
	list-style-position: inside;
    }

    ol.indented {

	margin-left: 2em;
	
	li {
	    margin-top: 0;
	    margin-bottom: .5em !important;
	}

    }

    p a {
	text-decoration: underline;
    }
}


.clear {
    clear: both;
}


span.smaller {
    font-size: 60%;
}

input[type=submit], button, a.button {
    text-decoration: none !important;
    display: inline-block;
    text-align: center;
    border: 1px solid #fe952d;
    padding: 8px 15px 8px 15px;
    color: white !important;
    font: 12px normal Ubuntu, Helvetica, sans-serif;
    border-radius: 5px;
    background-color: orange;
    background-image: -webkit-gradient(
    	linear,
    	left bottom,
    	left top,
    	color-stop(0, #f37300),
    	color-stop(0.5, #fea300),
    	color-stop(1, #febf00)
    );

    &:active {
    background-image: -webkit-gradient(
    	linear,
    	left top,
    	left bottom,
    	color-stop(0, #f37300),
    	color-stop(0.5, #fea300),
    	color-stop(1, #febf00)
    );

    }

    &[disabled] {
	border: 1px solid #ccc;
	background: #ddd;
    }

}


button.small {
    padding: 3px;
}

label {
    color: #636363;
    font-weight: bold;
    margin-bottom: 4px;
}

input[type=text], form select {
    border: 1px solid #e0e0e0;
    font: 12px normal Ubuntu, Helvetica, sans-serif;
    padding: 5px;
    display: block;
    margin-bottom: 15px;
    margin-top: 0;
}

.field_with_errors input[type=text] {
    border: 1px solid red;
}

form {
    margin-bottom: 15px;

    .errors {
	
	
	margin-bottom: 15px;

	h3 {
	    margin-bottom: 15px;
	    color: #f05050;
	}

	ul {
	    margin-left: 30px;
	    list-style-type: disc;
	}

    }

    .notice {
	font-weight: bold;
	margin-bottom: 15px;
    }
    
}
form.edit_notification{
    display: none;
}
.fullwidth p {
    margin-bottom: 1em;
}

a.text {
    text-decoration: underline;
}

#list.normal {
        padding: 20px;
        background: white;
        border-color: rgba(193, 205, 215, .6);
        border-width: 0 1px 1px 1px;
        border-style: solid;
        overflow: hidden;
        width: 586px;
}


#news .text {
    padding: 10px;
    margin-bottom: 20px;
    border: 1px solid #d6f0ff;
}     


a[data-toggle] {
    display: block;
    text-indent: 17px;
    background: url('<%= asset_path "arrow-right.png" %>') no-repeat;
    background-position: 3px 3px;
    
    &.opened {
	background-image: url('<%= asset_path "arrow-down.png" %>');
	background-position: 3px 5px;
    }

}

.tooltip {
	display:none;
	background: black;
	font-size:12px;
	padding:5px;
	color:#fff;	
	z-index: 100;
	max-width: 200px;
}

.blank {
    font-size: smaller;
    text-align: center;
}


.contact {
    p.email {
	border: 1px solid #d6f0ff;
	text-align:center;
	padding: 15px;
	font-size: 22px;
    }
}

#news .text {
    background: white;
    margin: 0;
    border: 0;
    padding-left: 20px;
    padding-top: 15px;
    padding-bottom: 15px;
}

#feed {
    width: 628px;
    min-height: 1000px;

    &.loading {
	background: #fff url('<%= asset_path "loading-big.gif" %>') no-repeat center 170px; 
    }
}


#list {
    .heading {
 	background: #fafafa;
 	z-index: 20;
 	border-bottom: 1px solid #f0f0f0;

	a {
	    float: none;
	}
	
 	padding: 15px;
 	position: relative;
 	h1 {
 	    font-size: 18px;
 	}

    }

    .tab.hidden {
	display: none;
    }

}

