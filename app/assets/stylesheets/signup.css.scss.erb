.extension, .users.new, .alldone{
    .bigtext{
        text-align: center;
        margin-bottom: 30px;
    }
    #terms{
        text-align: center;
    }
    #main .app{
        text-indent: -9999px;
        display: block;
        background: url('<%= asset_path "app_button.png" %>') no-repeat;
        width: 161px;
        height: 51px;
        margin: 0 auto;
    }
    .bigtext a, .bigtext a:visited{
        text-decoration: underline;
    }
}

.extension #terms {
    text-align: left;

    p.bigtext {
	margin-left: 0;
	text-align: center;
	margin-right: 0;
	margin-bottom: 40px;
    }

    a {
	text-decoration: underline;
    }

    p, ul {
	margin-left: 150px;
	margin-right: 150px;
    }

    ul {
	list-style-type: circle;
	padding-left: 40px;
    }

    form {
	margin-top: 40px;
    }

    .next {
	float: right;
    }

}
