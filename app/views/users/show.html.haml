= content_for :javascript do
  = javascript_include_tag "/javascripts/jquery.flot.js"

- title @user.display_name

%h1= @user.display_name

#content
  %h2 Reading time per language per week

  %table.multi-stats{ style: "width: 100%; height: 500px" }
    - for language_name, language in @user.weekly_languages
      %tbody{ "data-label" => language_name }
        - for week, count in language
          %tr
            %td
              = week
            %td
              = count
